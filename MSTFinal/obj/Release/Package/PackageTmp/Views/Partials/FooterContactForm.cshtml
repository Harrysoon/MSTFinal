@model MSTFinal.Models.ContactModel
@using (Html.BeginUmbracoForm<MSTFinal.Controllers.ContactSurfaceController>("CreateContactMessage", null, new { @class = "contact-form" }))
{
    <div class="form-group">
        <label for="name" class="sr-only">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
    </div>
                                                <div class="form-group">
                                                    <label for="email" class="sr-only">Email</label>
                                                    @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", @placeholder = "E-mail Address" })
                                                </div>
                                                <div class="form-group">
                                                    <label for="mobile" class="sr-only">Mobile Number</label>
                                                    @Html.TextBoxFor(x => x.MobileNumber, new { @class = "form-control", @placeholder = "Mobile Number (Optional)" })
                                                </div>
                                                <div class="form-group">
                                                    <label for="message" class="sr-only">Message</label>
                                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Message", @rows = "7" })
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" id="btn-submit" class="btn btn-send-message btn-md" value="Send Message">
                                                </div>
}
