@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.About>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
<div class="fh5co-parallax" style="background-image: url(images/home-image-4.jpg);" data-stellar-background-ratio="0.5">
			<div class="overlay"></div>
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-center fh5co-table">
						<div class="fh5co-intro fh5co-table-cell animate-box">
							<h1 class="text-center">About MST</h1>
						</div>
                        <div class="col-md-6 col-md-offset-3 text-center">
                        </div>
					</div>
				</div>
			</div>
		</div><!-- end: fh5co-parallax -->
		<!-- end:fh5co-hero -->
		<div id="fh5co-team-section">
			<div class="container">
				<div class="row about">
					<div class="col-md-12 col-md-offset-0">
						<img class="img-responsive animate-box" src="~/images/home-image-3.jpg" alt="About">
					</div>
					<div class="col-md-12 col-md-offset-0 animate-box">
						<p>@Umbraco.Field("aboutDescription", removeParagraphTags: true)</p>
					</div>
				</div>
	<div id="fh5co-programs-section" class="about programs">
			<div class="container"></div>
				<div class="row text-center">
                @{
                    var selection = CurrentPage.Site().FirstChild("programs").Children("program").Where("Visible");
                }
	            @foreach (var item in selection)
                {
			        <div class="col-md-4 col-sm-6">
			            <div class="program animate-box">
			                <img src="@Umbraco.TypedMedia(item.programIcon.ToString()).Url"/>
				            <h3>@item.Name</h3>
				            <p>@umbraco.library.RemoveFirstParagraphTag(item.programDescription.ToString())</p>
			            </div>
			        </div>
                }
				</div>
			</div>
    </div>
   <div id="fh5co-pricing-section" class="about fh5co-pricing fh5co-lightgray-section">
       <div class="container">
           <div class="row text-center">
               @{var priceSelection = CurrentPage.Site().FirstChild("prices").Children("price").Where("Visible");
            foreach (var item in priceSelection)
            {
                if (item.bestValue)
                {
                           <div class="col-md-3 animate-box">
                               <div class="price-box animate-box popular">
                                   <h2 class="pricing-plan">@item.tariffType<span>Best Offer</span></h2>
                                   <div class="price"><sup class="currency"></sup>@item.tariffPrice<small>@item.tariffLength</small></div>
                                   <p class="price-desc">@umbraco.library.RemoveFirstParagraphTag(item.tariffDescription.ToString())</p>
                               </div>
                           </div>
                       }
                       else
                       {
                           <div class="col-md-3 animate-box">
                               <div class="price-box animate-box">
                                   <h2 class="pricing-plan">@item.tariffType</h2>
                                   <div class="price"><sup class="currency"></sup>@item.tariffPrice<small>@item.tariffLength</small></div>
                                   <p class="price-desc">@umbraco.library.RemoveFirstParagraphTag(item.tariffDescription.ToString())</p>
                               </div>
                           </div>
                       }
                   }
               }
           </div>
       </div>
   </div>