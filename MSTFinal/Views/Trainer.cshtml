@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Trainer>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = null;
}<div class="col-md-4 col-sm-6">
						<div class="team-section-grid animate-box" style="background-image: url(images/trainer-1.jpg);">
							<div class="overlay-section">
								<div class="desc">
									<h3>@Umbraco.Field("trainerName", removeParagraphTags: true)</h3>
									<span>@Umbraco.Field("trainerTitle", removeParagraphTags: true)</span>
									<p>@Umbraco.Field("trainerDescription", removeParagraphTags: true)</p>
									<p class="fh5co-social-icons">
										<a href="@Umbraco.Field("trainerFacebook", removeParagraphTags: true)"><i class="icon-facebook-with-circle"></i></a>
										<a href="@Umbraco.Field("trainerInstagram", removeParagraphTags: true)"><i class="icon-instagram-with-circle"></i></a>
									</p>
								</div>
							</div>
						</div>
					</div>